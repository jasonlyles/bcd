<div class="card">
  <div class="card-header">
    <h1>Swap Part in all Parts Lists</h1>
  </div>
  <div class="card-body">
    <br />
    <%= form_for(:parts_lists, url: { action: :create_new_elements }, remote: true) do |f| %>
      <div class="form-group row">
        <%= f.label :part, 'Part to Replace', class: 'form-label col-2 mt-2 d-flex justify-content-end' %>
        <div class="col-6">
          <%= f.text_field :old_part, class: 'form-control', placeholder: 'Brick 1 x 1', data: { autocomplete_select: true, autocomplete_source: admin_parts_path } %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :part, 'Replace Part With', class: 'form-label col-2 mt-2 d-flex justify-content-end' %>
        <div class="col-6">
          <%= f.text_field :new_part, class: 'form-control', placeholder: 'Brick 1 x 1', data: { autocomplete_select: true, autocomplete_source: admin_parts_path } %>
        </div>
      </div>
      <br />
      <div class="form-group d-inline-block">
        <%= f.submit 'Create New Elements', data: { disable_with: 'Creating...' }, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<br />
<div id="new_elements" class="mt-2"></div>
