<div class="card">
  <div class="card-header">
    Listing parts
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-10">
        <div class="row">
          <div class="col-auto mr-auto">
            <%= paginate @parts %>
          </div>
          <div class="col-auto">
            <%= link_to 'New Part', new_part_path, class: 'btn btn-primary mb-3' %>
          </div>
        </div>
        <table class="table table-bordered table-hover">
          <thead>
            <tr class="table-secondary">
              <th><%= sort_link(@q, :name) %></th>
              <th><%= sort_link(@q, :ldraw_id, 'LDraw ID') %></th>
              <th><%= sort_link(@q, :bl_id, 'Bricklink ID') %></th>
              <th>Range</th>
              <th>Alternate #s</th>
              <th>Re?</th>
              <th>BL?</th>
              <th style="width: 8%;"></th>
            </tr>
          </thead>
          <tbody>
            <% @parts.each do |part| %>
              <tr>
                <td>
                  <%= link_to part.name, part %>
                </td>
                <td>
                  <%= part.ldraw_id %>
                </td>
                <td>
                  <%= part.bl_id %>
                </td>
                <td>
                  <%= part.year_from.present? || part.year_to.present? ? "#{part.year_from} - #{part.year_to}" : '' %>
                </td>
                <td>
                  <%= part.alternate_nos['alternates'].to_sentence if part.alternate_nos.present? %>
                </td>
                <td class="align-middle text-center">
                  <%= !part.check_rebrickable? ? raw('<i class="text-success fas fa-check"></i>') : raw('<i class="text-danger fas fa-times"></i>') %>
                </td>
                <td class="align-middle text-center">
                  <%= !part.check_bricklink? ? raw('<i class="text-success fas fa-check"></i>') : raw('<i class="text-danger fas fa-times"></i>') %>
                </td>
                <td class="align-middle text-center">
                  <%= link_to raw('<i class="far fa-edit"></i>'), edit_part_path(part) %>
                  &nbsp;
                  <%= link_to raw('<i class="far fa-trash-alt"></i>'), part, data: {confirm: 'Are you sure?'}, method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @parts %>
      </div>
      <div class="col-2">
        <div class="card">
          <div class="card-header">
            Search
          </div>
          <div class="card-body">
            <%= search_form_for @q do |f| %>
              <div class="form-group">
                <%= f.label :name_cont %>
                <%= f.search_field :name_cont, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :ldraw_id_or_bl_id_or_lego_id_eq, 'LDraw/Bricklink/Lego ID equals' %>
                <%= f.search_field :ldraw_id_or_bl_id_or_lego_id_eq, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :alternate_nos_cont, 'Alternate #s contains' %>
                <%= f.search_field :alternate_nos_cont, class: "form-control" %>
              </div>
              <br />
              <%= f.submit 'Search', class: 'btn btn-primary mb-1' %>
              <%= link_to "Clear Search", request.path, class:"btn btn-warning" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
